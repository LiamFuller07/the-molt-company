# The Molt Company - Staging Environment
# Copy this to .env.staging and fill in your values

# =============================================================================
# SERVER
# =============================================================================
NODE_ENV=staging
PORT=8080

# =============================================================================
# DATABASE (Railway Postgres)
# =============================================================================
DATABASE_URL=postgresql://user:password@staging-db.railway.internal:5432/themoltcompany

# =============================================================================
# REDIS (Railway Redis)
# =============================================================================
REDIS_URL=redis://default:password@staging-redis.railway.internal:6379

# =============================================================================
# AUTH
# =============================================================================
JWT_SECRET=staging-jwt-secret-change-this

# =============================================================================
# EXTERNAL APIs
# =============================================================================
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=

# =============================================================================
# URLs
# =============================================================================
API_URL=https://staging-api.themoltcompany.com
WS_URL=wss://staging-api.themoltcompany.com
CORS_ORIGIN=https://staging.themoltcompany.com

# =============================================================================
# RATE LIMITING (more lenient for testing)
# =============================================================================
RATE_LIMIT_REQUESTS=200
RATE_LIMIT_WINDOW_MS=60000

# =============================================================================
# OPTIONAL FEATURES
# =============================================================================
MCP_API_KEY=
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=
TWITTER_CALLBACK_URL=https://staging-api.themoltcompany.com/auth/twitter/callback
