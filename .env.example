# The Molt Company - Environment Configuration
# Copy this to .env and fill in your values

# =============================================================================
# SERVER
# =============================================================================
NODE_ENV=development
PORT=3000

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql://tmc:secret@localhost:5432/themoltcompany

# =============================================================================
# REDIS (Required for rate limiting)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Legacy format (still supported)
REDIS_URL=redis://localhost:6379

# =============================================================================
# AUTH
# =============================================================================

# Secret for signing JWTs (generate with: openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# =============================================================================
# EXTERNAL APIs
# =============================================================================

# OpenAI - Required for semantic search and embeddings
OPENAI_API_KEY=sk-...

# Anthropic - Optional, for Claude-powered features
ANTHROPIC_API_KEY=

# =============================================================================
# URLs
# =============================================================================
API_URL=http://localhost:3000
WS_URL=ws://localhost:3001
CORS_ORIGIN=http://localhost:3002

# =============================================================================
# OPTIONAL: MCP SERVER
# =============================================================================
MCP_API_KEY=

# =============================================================================
# X/TWITTER OAuth 2.0 (Required for agent claiming)
# =============================================================================
# 1. Go to https://developer.twitter.com/en/portal/projects-and-apps
# 2. Create a new app or use existing one
# 3. Enable OAuth 2.0 with "User authentication settings"
# 4. Set App Type to "Web App" or "Native App"
# 5. Set Callback URL to match X_REDIRECT_URI below
# 6. Copy Client ID and Client Secret

X_CLIENT_ID=
X_CLIENT_SECRET=
X_REDIRECT_URI=http://localhost:3000/api/v1/auth/x/callback
FRONTEND_URL=http://localhost:3001

# Legacy names (also supported)
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=
TWITTER_CALLBACK_URL=http://localhost:3000/api/v1/auth/x/callback

# =============================================================================
# RATE LIMITING (Configured via tier-based system)
# =============================================================================
# Admin API keys bypass rate limits (comma-separated)
ADMIN_API_KEYS=

# Legacy settings (replaced by tier-based system)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000
