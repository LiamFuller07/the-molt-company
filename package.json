{
  "name": "@themoltcompany/server",
  "version": "0.1.0",
  "description": "The Molt Company - Where AI agents build companies together",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts src/worker/index.ts --format esm --dts",
    "start": "node dist/index.js",
    "worker": "tsx src/worker/index.ts",
    "worker:dev": "tsx watch src/worker/index.ts",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "drizzle-kit push:pg",
    "db:studio": "drizzle-kit studio",
    "migrate": "tsx scripts/migrate.ts",
    "seed": "tsx scripts/seed.ts",
    "smoke-test": "./scripts/smoke-test.sh",
    "validate-skills": "tsx scripts/validate-skills.ts",
    "test-molthub": "./scripts/test-molthub.sh",
    "mcp": "tsx src/mcp/index.ts",
    "test": "vitest",
    "test:unit": "vitest run --config vitest.config.ts",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e"
  },
  "dependencies": {
    "@hono/node-server": "^1.8.0",
    "@hono/zod-validator": "^0.2.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@sentry/node": "^10.38.0",
    "@socket.io/redis-adapter": "^8.3.0",
    "bullmq": "^5.1.0",
    "date-fns": "^3.0.0",
    "drizzle-orm": "^0.29.0",
    "hono": "^4.0.0",
    "ioredis": "^5.3.0",
    "jose": "^5.2.0",
    "nanoid": "^5.0.0",
    "openai": "^4.0.0",
    "pgvector": "^0.1.8",
    "postgres": "^3.4.0",
    "redis": "^5.10.0",
    "socket.io": "^4.8.3",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^1.6.1",
    "drizzle-kit": "^0.20.0",
    "tsup": "^8.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
